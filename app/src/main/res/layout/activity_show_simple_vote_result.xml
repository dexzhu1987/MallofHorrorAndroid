<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/room_viewing"
    tools:context="com.bignerdranch.android.mallofhorrorandroid.ShowSimpleVoteResultActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:background="#9F010101"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/digital"
                android:text="Vote Result Summary"
                android:textAlignment="center"
                android:textColor="#00FE00"
                android:layout_gravity="center"
                android:textSize="35dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="550dp"
            android:layout_height="205dp"
            android:orientation="vertical"
            android:background="#9F808080"
            android:layout_marginTop="20dp"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:background="#B3000000"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:text="SUMMARY:"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="550dp"
                android:layout_height="30dp"
                android:layout_marginBottom="20dp"
                android:background="#99808080"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FF0000"
                    android:layout_gravity="center"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="20dp"
                    android:textSize="20dp"
                    android:text="RED:"/>

                <TextView
                    android:id="@+id/redresult_simple"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/digital"
                    android:layout_marginRight="100dp"
                    android:layout_gravity="center"
                    android:text="0"
                    android:textColor="#ff0000"
                    android:textSize="25dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0000FF"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:text="BLUE:"/>

                <TextView
                    android:id="@+id/blueresult_simple"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/digital"
                    android:layout_gravity="center"
                    android:text="0"
                    android:textColor="#0000ff"
                    android:textSize="25dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="550dp"
                android:layout_height="30dp"
                android:layout_marginBottom="20dp"
                android:background="#99808080"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffff00"
                    android:layout_marginRight="18dp"
                    android:layout_marginLeft="100dp"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:text="YELLOW:" />

                <TextView
                    android:id="@+id/yellowresult_simple"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="162dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/digital"
                    android:text="0"
                    android:textColor="#ffff00"
                    android:textSize="25dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#00ff00"
                    android:layout_marginRight="20dp"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:text="GREEN:" />
                <TextView
                    android:id="@+id/greenresult_simple"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/digital"
                    android:text="0"
                    android:layout_gravity="center"
                    android:textColor="#00ff00"
                    android:textSize="25dp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="550dp"
                android:layout_height="30dp"
                android:background="#99808080"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#521515"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="100dp"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:text="BROWN:" />
                <TextView
                    android:id="@+id/brownresult_simple"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="166dp"
                    android:fontFamily="@font/digital"
                    android:text="0"
                    android:textColor="	#521515"
                    android:layout_gravity="center"
                    android:textSize="25dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:text="BLACK:"/>

                <TextView
                    android:id="@+id/blackresult_simple"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/digital"
                    android:layout_gravity="center"
                    android:text="0"
                    android:textColor="#ffffff"
                    android:textSize="25dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
