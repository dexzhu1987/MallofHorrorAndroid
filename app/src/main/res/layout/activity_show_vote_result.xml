<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/room_viewing"
    tools:context="com.bignerdranch.android.mallofhorrorandroid.ShowVoteResultActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:background="#B3010101"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/digital"
                android:text="Vote Result"
                android:textAlignment="center"
                android:textColor="#00FE00"
                android:layout_gravity="center"
                android:textSize="35dp" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="550dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:padding="2dp"
            android:gravity="center"
            android:layout_marginBottom="1dp"
            android:background="#B3000000">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="140dp"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:text="PLAYER:"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="90dp"
                android:layout_marginRight="90dp"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:text="VOTE:"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="550dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:padding="2dp"
            android:background="#9F7a0000">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="250dp"
                android:layout_marginLeft="50dp"
                android:textColor="#FF0000"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:text="RED:"/>

            <ImageView
                android:id="@+id/redvoted"
                android:layout_width="99dp"
                android:layout_height="23dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/votingnormalbttn" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="550dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:padding="2dp"
            android:background="#9Fb2b200">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="210dp"
                android:layout_marginLeft="50dp"
                android:textColor="#ffff00"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:text="YELLOW:"/>

            <ImageView
                android:id="@+id/yellowvoted"
                android:layout_width="99dp"
                android:layout_height="23dp"
                app:srcCompat="@drawable/votingnormalbttn" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="550dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:padding="2dp"
            android:background="#9F00007f">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="240dp"
                android:layout_marginLeft="50dp"
                android:textColor="#9999ff"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:text="BLUE:"/>

            <ImageView
                android:id="@+id/bluevoted"
                android:layout_width="99dp"
                android:layout_height="23dp"
                app:srcCompat="@drawable/votingnormalbttn" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="550dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:padding="2dp"
            android:background="#9F004c00">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="225dp"
                android:textColor="#00FE00"
                android:layout_marginLeft="50dp"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:text="GREEN:"/>

            <ImageView
                android:id="@+id/greenvoted"
                android:layout_width="99dp"
                android:layout_height="23dp"
                app:srcCompat="@drawable/votingnormalbttn" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="550dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:padding="2dp"
            android:background="#9F310c0c">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="218dp"
                android:textColor="#842121"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:textSize="20sp"
                android:text="BROWN:"/>

            <ImageView
                android:id="@+id/brownvoted"
                android:layout_width="99dp"
                android:layout_height="23dp"
                app:srcCompat="@drawable/votingnormalbttn" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="550dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:padding="2dp"
            android:background="#9F000000">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="227dp"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_marginLeft="50dp"
                android:layout_gravity="center"
                android:text="BLACK:"/>

            <ImageView
                android:id="@+id/blackvoted"
                android:layout_width="99dp"
                android:layout_height="23dp"
                app:srcCompat="@drawable/votingnormalbttn" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="550dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#9F4c4c4c"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:background="#B3000000"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:text="SUMMARY:"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="550dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9FFF0000"
                android:layout_marginRight="20dp"
                android:textSize="20dp"
                android:text="RED:"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/redresult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/digital"
                android:text="0"
                android:textColor="#ff0000"
                android:layout_gravity="center"
                android:textSize="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0000FF"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="20dp"
                android:textSize="20dp"
                android:text="BLUE:"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/blueresult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/digital"
                android:text="0"
                android:textColor="#0000ff"
                android:layout_gravity="center"
                android:textSize="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#521515"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="20dp"
                android:textSize="20dp"
                android:text="BROWN:"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/brownresult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/digital"
                android:text="0"
                android:layout_gravity="center"
                android:textColor="	#521515"
                android:textSize="25dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="550dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffff00"
                android:layout_marginRight="18dp"
                android:textSize="20dp"
                android:text="YELLOW:"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/yellowresult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="50dp"
                android:fontFamily="@font/digital"
                android:text="0"
                android:textColor="#ffff00"
                android:textSize="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#00ff00"
                android:layout_marginRight="20dp"
                android:textSize="20dp"
                android:text="GREEN:"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/greenresult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="90dp"
                android:fontFamily="@font/digital"
                android:text="0"
                android:textColor="#00ff00"
                android:textSize="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_marginRight="20dp"
                android:textSize="20dp"
                android:text="BLACK:"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/blackresult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/digital"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="25dp" />



        </LinearLayout>

    </LinearLayout>









</LinearLayout>
