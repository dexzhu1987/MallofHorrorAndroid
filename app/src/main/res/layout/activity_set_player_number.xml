<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bignerdranch.android.mallofhorrorandroid.SetPlayerNumberActivity"
    android:background="@drawable/numberwindowbg"
    android:layout_gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/text_setplayer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="60dp"
        android:background="#010101"
        android:fontFamily="@font/digital"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/set_player"
        android:textAlignment="center"
        android:textColor="#00FE00"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/number_four_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/round_button"
        android:scaleType="fitXY"
        android:src="@drawable/numberfourbutton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/number_five_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="76dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/round_button"
        android:scaleType="fitXY"
        android:src="@drawable/numberfivebutton"
        app:layout_constraintEnd_toStartOf="@+id/number_six_button"
        app:layout_constraintStart_toEndOf="@+id/number_four_button"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/number_six_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/round_button"
        android:scaleType="fitXY"
        android:src="@drawable/numbersixbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
